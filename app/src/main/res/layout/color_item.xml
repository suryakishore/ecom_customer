<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvColorBackGround"
        android:layout_width="@dimen/seventy_dp"
        android:layout_height="@dimen/fourty_dp"
        android:background="@drawable/black_rect_border"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivColor"
        android:layout_width="@dimen/sixty_dp"
        android:layout_height="@dimen/thirty_dp"
        android:background="@drawable/rectangle_blue_rounded_corner"
        android:paddingStart="@dimen/five_dp"
        android:paddingLeft="@dimen/five_dp"
        android:paddingEnd="@dimen/five_dp"
        android:paddingRight="@dimen/five_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>