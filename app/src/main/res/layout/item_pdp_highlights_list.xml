<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fifteen_dp"
        android:layout_marginEnd="@dimen/fifteen_dp"
        android:paddingTop="@dimen/five_dp"
        android:paddingBottom="@dimen/five_dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tvHighLightsPointer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five_dp"
            android:background="@drawable/ecom_highlights_dot"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHighLightsText"
            style="@style/Text.12sp.PoppinsRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ten_dp"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            app:layout_constraintStart_toEndOf="@id/tvHighLightsPointer"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/categories" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>