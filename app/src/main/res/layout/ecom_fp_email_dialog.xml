<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingBottom="@dimen/twenty_dp">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDialogChooseSubHeaderText"
        style="@style/Text.13sp.colorDoveGrayApprox.PoppinsRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/four_dp"
        android:text="@string/loginResetPasswordMailDes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDialogChooseHeaderText" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivCross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/eight_dp"
        android:layout_marginEnd="@dimen/ten_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/close" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDialogChooseHeaderText"
        style="@style/Text.19sp.PrimaryTextColor.poppins_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resetPasswordCheckYourMail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivCross" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvForGotPassMailId"
        style="@style/Text.14sp.colorBlackApprox.PoppinsRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/two_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDialogChooseSubHeaderText" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivForgotPassMailLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvForGotPassMailId"
        app:srcCompat="@drawable/fp_email_success" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvForGotPassOk"
        style="@style/Text.12dp.PrimaryTextColor.poppins_semibold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twenty_dp"
        android:layout_marginLeft="@dimen/twenty_dp"
        android:layout_marginTop="@dimen/fifteen_dp"
        android:layout_marginEnd="@dimen/twenty_dp"
        android:layout_marginRight="@dimen/twenty_dp"
        android:background="@drawable/ripple_selector"
        android:drawableEnd="@drawable/ic_arrow_icon"
        android:drawablePadding="-30dp"
        android:gravity="center"
        android:paddingStart="@dimen/zero_dp"
        android:paddingTop="@dimen/eight_dp"
        android:paddingEnd="@dimen/five_dp"
        android:paddingBottom="@dimen/eight_dp"
        android:text="@string/allContinue"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/ivForgotPassMailLogo" />


</androidx.constraintlayout.widget.ConstraintLayout>