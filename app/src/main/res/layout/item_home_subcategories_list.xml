<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvMain"
        android:background="@color/colorWhite"
        app:cardElevation="@dimen/one_dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivHomeItemSubCategories"
                android:layout_width="@dimen/oneThirtyFive_dp"
                android:scaleType="centerInside"
                android:layout_height="@dimen/oneThirtyFive_dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginTop="@dimen/five_dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/fifteen_dp"
                android:id="@+id/tvCateName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Text.12sp.Black.PoppinsRegular"
                tools:text="Golden Cup Coffee"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivHomeItemSubCategories" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>