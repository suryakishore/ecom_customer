<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/helpLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/helpWithThisOrderContentTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/arrow_right"
                android:drawableRight="@drawable/arrow_right"
                android:drawablePadding="@dimen/twenty_dp"
                android:drawableTint="@color/waterloo"
                android:fontFamily="@font/poppins_medium"
                android:padding="@dimen/twenty_dp"
                android:textColor="@color/colorCharade"
                android:textSize="@dimen/fourteen_sp" />

        </LinearLayout>


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_dp"
            android:background="@color/colorBotticelli" />
    </LinearLayout>

</layout>