<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clMainLayout"
        android:layout_width="@dimen/oneTwenty_dp"
        android:layout_height="@dimen/sixty_five_dp"
        android:foreground="?attr/selectableItemBackground"
        android:background="@color/desert_storm">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Text.14sp.colorBlackApprox.PoppinsRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCatName"
            android:text="Category"
            android:textAllCaps="false"
            android:gravity="center"
            android:maxLines="2"
            android:layout_margin="@dimen/five_dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/selectedSideBar"
            android:layout_width="@dimen/four_dp"
            android:layout_height="match_parent"
            android:background="@color/allEastBayColor"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_dp"
            android:background="@color/mercury"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>