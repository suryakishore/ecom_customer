<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/thirty_dp"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/alertMsgTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fifteen_dp"
        android:layout_marginLeft="@dimen/fifteen_dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:fontFamily="@font/muli_regular"
        android:gravity="center"
        android:text="This Product has Addons, to remove product please go to Cart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/goToCartBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fifteen_dp"
        android:layout_marginLeft="@dimen/fifteen_dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="@dimen/fifteen_dp"
        android:layout_marginRight="@dimen/fifteen_dp"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/muli_bold"
        android:gravity="center"
        android:padding="@dimen/ten_dp"
        android:text="@string/go_to_cart"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alertMsgTv" />

    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fifteen_dp"
        android:layout_marginLeft="@dimen/fifteen_dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="@dimen/fifteen_dp"
        android:layout_marginRight="@dimen/fifteen_dp"
        android:background="@drawable/black_rect_border"
        android:fontFamily="@font/muli_bold"
        android:padding="@dimen/ten_dp"
        android:text="@string/allCancel"
        android:textColor="@color/colorChalice"
        app:layout_constraintEnd_toEndOf="@+id/goToCartBtn"
        app:layout_constraintStart_toStartOf="@+id/goToCartBtn"
        app:layout_constraintTop_toBottomOf="@+id/goToCartBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>