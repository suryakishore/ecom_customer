<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clItemBrand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/ten_dp"
        android:paddingBottom="@dimen/ten_dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivPdpProductOfferPer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fifteen_dp"
            android:tint="@color/colorProductBackgroundDetails"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/pdp_offers_percentage" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPdpBulletPoint"
            style="@style/Text.12sp.PoppinsRegular"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ten_dp"
            android:layout_marginTop="@dimen/three_dp"
            android:layout_marginEnd="@dimen/twenty_dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/ivPdpProductOfferPer"
            app:layout_constraintStart_toEndOf="@+id/ivPdpProductOfferPer"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Special Price Extra $12 discount On First Order from App" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>